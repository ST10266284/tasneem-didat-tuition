@{
    ViewData["Title"] = "Home";
}

<div class="jumbotron">
    <h1 class="animate__animated animate__fadeInDown">Welcome to Tasneem Didat's Tuition Service</h1>
    <p class="lead animate__animated animate__fadeInUp">Fully qualified teacher with 37 years of experience.</p>
    <a href="/Home/About" class="btn btn-primary btn-lg animate__animated animate__pulse">Learn More</a>
</div>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h2>English Tuition</h2>
                    <p>Expert guidance for grades 6 to 10.</p>
                    <a href="/Home/Services" class="btn btn-primary">View Details</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h2>Afrikaans Tuition</h2>
                    <p>Specialized lessons tailored to your needs.</p>
                    <a href="/Home/Services" class="btn btn-primary">View Details</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h2>Contact Me</h2>
                    <p>Get in touch to enroll or ask questions.</p>
                    <a href="/Home/Contact" class="btn btn-primary">Contact Now</a>
                </div>
            </div>
        </div>
    </div>
</div>

